<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center"
	android:background="@drawable/image_1">

	<ImageView
		android:src="@drawable/ic_launcher"
		android:layout_width="50dp"
		android:layout_height="50dp"
		android:onClick="onClickImageView1"
		android:id="@+id/mainImageView1"
		android:layout_marginLeft="90dp"
		android:layout_marginTop="270dp"/>

	<TextView
		android:text="@string/hello_world"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/mainTextView1"
		android:layout_marginTop="100dp"
		android:layout_marginLeft="100dp"
		android:layout_alignLeft="@id/mainImageView1"/>

	<ImageView
		android:src="@drawable/image_2"
		android:layout_width="100dp"
		android:layout_height="100dp"
		android:id="@+id/mainImageView2"
		android:onClick="onClickImageView2"
		android:layout_marginTop="360dp"
		android:layout_marginLeft="180dp"/>

	<ImageView
		android:src="@drawable/image_3"
		android:layout_width="20dp"
		android:layout_height="20dp"
		android:layout_marginLeft="115dp"
		android:layout_marginTop="100dp"
		android:id="@+id/mainImageView3"/>

	<ImageView
		android:src="@drawable/image_4"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:onClick="onClickImageView4"
		android:visibility="invisible"
		android:id="@+id/mainImageView4"/>

</FrameLayout>

